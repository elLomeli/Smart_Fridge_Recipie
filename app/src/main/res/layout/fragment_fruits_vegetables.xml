<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fruits_Vegetables_Fragment"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageFV"
                android:layout_width="@dimen/foto_width"
                android:layout_height="@dimen/foto_height"
                android:layout_gravity="center"
                android:background="#DFD9D9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageButton
                android:id="@+id/addFV"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/txt"
                android:src="@drawable/ic_camera"
                android:onClick="Camera"
                tools:ignore="SpeakableTextPresentCheck"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Codigo :"
                    android:fontFamily="@font/montserratbold"
                    android:textColor="@color/black"
                    android:textSize="35dp"/>

                <TextView
                    android:id="@+id/IdFV"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/montserratregular"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <TextView
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nombre :"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/nombreFV"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:fontFamily="@font/montserratregular"
                android:hint="Nombre"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />
            <TextView
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Gramos :"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/gramosFV"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:fontFamily="@font/montserratregular"
                android:hint="Gramos"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Numero de Unidades :"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/UnidadFV"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserratregular"
                android:hint="Num_Unidades"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Fruta o Verdura :"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/FoV"
                android:layout_width="500dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/IconGray"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/agregarFV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="AGREGAR"
                android:layout_marginRight="40dp"
                android:layout_gravity="bottom|right"
                android:gravity="center"
                android:textSize="11sp"
                />

        </LinearLayout>
</LinearLayout>